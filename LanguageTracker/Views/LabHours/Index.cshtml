                @Html.DisplayFor(modelItem => item.instructors)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total_days)
            </td>
            <td>
